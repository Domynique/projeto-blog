@model PostViewModel
@{
    ViewData["Title"] = "Editar";
    ViewBag.Autorizado = Model.Autorizado;
}
<div class="row">
    <section>

        <div class="d-flex justify-content-end mb-3">
            <a asp-action="Index" class="btn btn-outline-primary btn-transparent"><i class="fas fa-arrow-left"></i> Voltar</a>

        </div>    

        <div class="col-md-11 mx-auto">

            <div class="post row">
                
                <h2>Editar</h2><hr />
                <div id="edit-post-form">
                    <partial name="_PostForm" model="@Model" /> 
                </div>

            </div>
    
        </div>
        
        <div class="col-md-11 mx-auto">

            <div class="comentario row">
                <h3>Comentários</h3><hr />
                
                <div id="comentarios">
                    <div class="col-md-9 mx-auto">
                        <partial name="_ComentarioList" model="Model.Comentarios" />
                    </div>
                </div>
                
                <div id="">
                    <partial name="_ComentarioForm" model="new ComentarioViewModel { PostId = Model.Id }" />
                </div>

            </div>

        </div>

    </section>
    
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/site.js" type="text/javascript"></script>
    }
}