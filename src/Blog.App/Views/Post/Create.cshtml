@model PostViewModel
@{
    ViewData["Title"] = "Novo";
}
<div class="row">
    <section>

        <div class="d-flex justify-content-end mb-3">
            <a asp-action="Index" class="btn btn-outline-primary btn-transparent"><i class="fas fa-arrow-left"></i> Voltar</a>

        </div>

        <div class="col-md-11 mx-auto">

            <div class="post row">
                
                <h2><i class="fas fa-plus"></i> Post</h2><hr />
                
                <div id="">
                    
                     <form asp-action="Create">
                        
                        <vc:Summary></vc:Summary>

                        <div class="form-group mb-3">
                            <label asp-for="Titulo" class="form-label"></label>
                            <input asp-for="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Conteudo" class="form-label"></label>
                            <textarea asp-for="Conteudo" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="Conteudo" class="text-danger"></span>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-outline-primary"> <i class="fas fa-edit"></i> Criar</button>
                        </div>
                    
                    </form>

                </div>

            </div>
    
        </div>

    </section>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
