@model ComentarioViewModel

<div id="messagesComentario"></div>

<form id="comentario-form">

    <div class="form-group mb-3">
        
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" id="Id" />
        <input type="hidden" asp-for="PostId" />
        <input type="hidden" asp-for="NomeUsuario" />
    
        <textarea asp-for="Conteudo" class="form-control" rows="4" placeholder="Escreva seu comentário..."></textarea>
        <span asp-validation-for="Conteudo" class="text-danger"></span>
    
    </div>
    
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-outline-primary" ><i class="fas fa-plus"></i> Criar</button>
    </div>

</form>
