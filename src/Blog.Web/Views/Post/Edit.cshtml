@model Blog.Api.ViewModels.PostViewModel

<div class="container mt-5">
    <h2>Editar Post</h2>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label for="Titulo">Título</label>
            <input type="text" class="form-control" id="Titulo" name="Titulo" value="@Model.Titulo" required>
        </div>
        <div class="form-group">
            <label for="Conteudo">Conteúdo</label>
            <textarea class="form-control" id="Conteudo" name="Conteudo" rows="5" required>@Model.Conteudo</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>
