@model RegisterViewModel

<div class="form-container">
    <div class="inner-container ">
        <h2>Registre-se</h2><span class="subtitle">e compartilhe a sua opinião.</span>
        <fieldset class="custom-fieldset">
        <form asp-action="Register" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nome">Nome</label>
                    <input type="text" class="form-control" id="Nome" asp-for="Nome" >
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email">E-mail</label>
                    <input type="email" class="form-control" id="Email" asp-for="Email" >
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Password">Senha</label>
                    <input type="password" class="form-control" id="Password" asp-for="Password" >
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ConfirmPassword">Confirmar Senha</label>
                    <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" required>
                </div>
            </div>
            <div class="form-group col-md-9">
                <button type="submit" class="btn btn-primary">Confirmar</button>
            </div>
        </form>
        </fieldset>
    </div>
</div>